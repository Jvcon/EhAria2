{
    "name": "EhAria2",
    "version": "0.0.7",
    "description": "",
    "main": "EhAria2.ahk",
    "scripts": {
        "start": "nodemon --exec EhAria2.ahk",
        "build": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./build.ps1 %npm_package_version% prod",
        "test": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./build.ps1 %npm_package_version% dev",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
    },
    "nodemonConfig": {
        "ignore": [
            "node_modules",
            "dist"
        ],
        "delay": "250",
        "watch": [
            "*",
            "lib/*"
        ],
        "ext": "js, json, ahk, ini, conf"
    },
    "keywords": [],
    "author": "",
    "license": "",
    "dependencies": {
        "nodemon": "^2.0.22"
    },
    "devDependencies": {
        "cz-conventional-changelog": "^3.3.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}